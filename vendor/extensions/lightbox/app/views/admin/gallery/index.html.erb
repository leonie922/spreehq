<%= link_to "Add Gallery", :action => 'new' -%>

<br/><br/>			

<h1>Galleries</h1>
<table>
	<tr>
		<td valign="top">
			<table class="admin-report" width="545">
			  <tr>
			    <td><b>Name</b></td>
			    <td/>
			  </tr>
			<% for gallery in @galleries%>
			  <tr>
			    <td><%= gallery.name %></td>
			    <td>
			      <%= link_to "Edit", :action => 'edit', :id => gallery %>
			      <%= link_to "Delete", {:action => 'destroy', :id => gallery}, :confirm => "Are you sure you want to delete this gallery?" %>
			    </td>
			  </tr>
			<% end %>
			</table>
		</td>
	</tr>
</table>
